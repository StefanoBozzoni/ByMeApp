<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/ByMeAppTextViewStyle</item>
        <item name="android:editTextStyle">@style/ByMeAppTextViewStyle</item>
        <item name="android:fontFamily">@font/roboto</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/activity_sladein_left</item>
        <item name="android:windowExitTransition">@transition/activity_fadeout</item>
        <item name="android:windowReturnTransition">@transition/activity_fadeout</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/ByMeAppTextViewStyle</item>
        <item name="android:editTextStyle">@style/ByMeAppTextViewStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ByMeAppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ByMeAppTextViewStyle.FormTextTitles">
        <item name="android:background">@color/colorAccentLight</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="ByMeAppTextViewStyle.FormEditText">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:paddingTop">2dp</item>
    </style>


    <style name="Fade">
        <item name="android:windowEnterAnimation">@transition/activity_explode</item>
        <item name="android:windowExitAnimation">@transition/activity_explode</item>
    </style>

</resources>
